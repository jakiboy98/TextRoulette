<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TextRoulette"
    android:background="#4C4C4C">

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/messageText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="Message"
        android:backgroundTint="#00CC00" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/Send"
        android:id="@+id/sendButton"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/messageText"
        android:layout_alignParentEnd="true"
        android:hint="Send"
        android:background="#00CC00" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="New Number"
        android:id="@+id/randomNumberButton"
        android:background="#00CC00"
        android:layout_below="@+id/numberView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/numberView"
        android:layout_below="@+id/messageText"
        android:layout_centerHorizontal="true"
        android:text="Number" />

</RelativeLayout>
