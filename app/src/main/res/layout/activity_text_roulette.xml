<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TextRoulette"
    android:background="#4C4C4C">

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/smsBody"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="Message"
        android:backgroundTint="#00CC00" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/Send"
        android:id="@+id/send"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/smsBody"
        android:layout_alignParentEnd="true"
        android:hint="Send"
        android:background="#00CC00" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/mobileNumber"
        android:layout_below="@+id/smsBody"
        android:hint="Number"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message Generator"
        android:id="@+id/messageGen"
        android:layout_below="@+id/mobileNumber"
        android:textColor="#fefff4"
        android:background="#00CC00"
        android:layout_alignLeft="@+id/mobileNumber"
        android:layout_alignStart="@+id/mobileNumber"
        android:layout_alignRight="@+id/mobileNumber"
        android:layout_alignEnd="@+id/mobileNumber" />

</RelativeLayout>
